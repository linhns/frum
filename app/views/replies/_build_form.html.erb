<%= form_with model: [ @post, @post.replies.build ] do |form| %>
  <div class="container-fluid" id='reply'>
    <div class='field mb-2'>
      <%= form.label :body, "Reply",  class: "form-label" %><br>
      <%= form.rich_text_area :body, class: "form-control reply-form" %>
    </div>
    <div>
      <%= form.submit nil, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
